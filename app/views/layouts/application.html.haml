!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title Vector

    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    #document-wrapper

      #menu_container
        = render partial: '/menu'

      #content_container
        #content_block{class: @page.color}

          #side_menu
            #side_menu_pic
            .side_menu_item{id: 'side-' + @page.color}
              %a{href: '/pages/' + @page.slug}
              .side_menu_text
                = @page.name
              .side_menu_desc
                = raw @page.meta_desc
            - @side_menu_pages.each do |page|
              - if page != @page
                .side_menu_item{id: 'side-' + page.color}
                  %a{href: '/pages/' + page.slug}
                  .side_menu_text
                    = page.name

          #right_block
            %nav
              - i = 0
              - @parent.pages.each do |page|
                - (page == @page) ? active_class = 'active_item' : active_class = ''
                - i = i + 1
                .top_menu_item{class: active_class, id: 'top_menu_item_' + i.to_s}
                  %a{href: '/pages/' + page.slug}
                  .top_menu_text
                    = page.name
            #right_block_content
              = yield

